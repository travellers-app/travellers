<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{title:'home'}) %>

    <body>
        <%- include('partials/header') %>
            <main style="display: flex;flex-direction: column;background-color: white;">
                <div id="serachDiv">
                    <form action="" style="position: relative;">
                        <input id="from" class="searchInp" type="text" value="<%=fromCity%>">
                        <input id="to" class="searchInp" type="text" value="<%=city%>">
                        <input id="start" class="searchInp" type="date" value="<%=checkin%>">
                        <input id="end" class="searchInp" type="date" value="<%=checkout%>"><br>
                        <button id="searchBtu">Search</button>
                    </form>
                </div>
                <div id="resultDiv">
                    <div style="height: 30px;margin-top: 20px;width:400px;display: flex;justify-content: center;">
                        <p class="pheader">
                            Hotels
                        </p>
                    </div>
                    <div
                        style="height: 30px;margin-top: 20px;width:400px;margin-left: 50px;margin-right: 50px;display: flex;justify-content: center;">
                        <p class="pheader">
                            Resturants
                        </p>
                    </div>
                    <div style="height: 30px;margin-top: 20px;width:400px;display: flex;justify-content: center;">
                        <p class="pheader">
                            Tours
                        </p>
                    </div>
                    <div class="resData" id="hotel">
                        <template id="hotTemp" type="text/x-tmpl-mustache">
                            <div class="parent">
                                <div class="hotelemp">
                                    <img class="hotelImg" src="{{img}}" alt="">
                                    <p class="hotelpara">name: {{name}}</p>
                                    <div class="hotelpara" style="text-align: left;">
                                        <p>
                                            {{discription}}
                                        </p>
                                    </div>
                                    <p class="hotelpara">rate: {{rate}}</p>
                                    <p class="hotelpara">contact: <br> {{contact}}</p>
                                    <p class="hotelpara">prcice: {{price}}</p>
                                </div>
                                <label class="hotelbtu" for="chooseHotel">choose
                                    <input type="radio" name="chooseHotel" class="hotel-box">
                                </label>
                            </div>
                        </template>
                    </div>
                    <div class="resData" id="returants" style="margin-left: 130px;margin-right: 130px;">
                        <template id="resTemp" type="text/x-tmpl-mustache">
                            <div class="parent">
                                <div class="hotelemp">
                                    <p class="hotelpara">name: {{name}}</p>
                                    <img class="hotelImg" src="{{img}}" alt="">
                                    <p class="hotelpara">rate: {{rate}}</p>
                                    <p class="hotelpara">contact: <br> <a href="{{contact}}">{{name}}</a></p>
                                </div>
                                <label class="hotelbtu" for="chooseRes">choose
                                    <input type="radio" name="chooseRes" class="resturent-box">
                                </label>
                            </div>
                        </template>
                    </div>
                    <div class="resData" id="touristic">
                        <template id="tourTemp" type="text/x-tmpl-mustache">
                            <div class="parent">
                                <div class="hotelemp">
                                    <img class="hotelImg" src="{{img}}" alt="">
                                    <p class="hotelpara">name: {{name}}</p>
                                    <div class="hotelpara" style="text-align: left;">
                                        <p>
                                            {{discription}}
                                        </p>
                                    </div>
                                    <p class="hotelpara">rate: {{rate}}</p>
                                    <p class="hotelpara">contact: <br> <a href="{{contact}}">{{name}}</a></p>
                                    <p class="hotelpara">prcice: {{price}}</p>
                                </div>
                                <label class="hotelbtu" for="chooseTour">choose
                                    <input type="radio" name="chooseTour" class="tour-box">
                                </label>
                            </div>
                        </template>
                    </div>
                </div>
                <button style="width:fit-content;align-self: center;" id="button">update</button>
                <form id="save-form" action="/put?_method=PUT" method="post">
                    <input type="hidden" name="id" value="<%=id%>">
                    <input type="hidden" id="fromCity" name="fromCity">
                    <input type="hidden" id="city" name="city">
                    <input type="hidden" name="lon" id="lon">
                    <input type="hidden" id="lat" name="lat">
                    <input type="hidden" id="hotel" name="hotel">
                    <input type="hidden" id="contact" name="contact">
                    <input type="hidden" id="checkin" name="checkin">
                    <input type="hidden" id="checkout" name="checkout">
                    <input type="hidden" id="returant" name="returant">
                    <input type="hidden" id="resturantimg" name="resturantimg">
                    <input type="hidden" id="resturanturl" name="resturanturl">
                    <input type="hidden" id="touristic" name="touristic">
                    <input type="hidden" id="touristicimg" name="touristicimg">
                    <input type="hidden" id="discrp" name="discrp">
                    <input type="submit" style="opacity: 0;" id="button2">
                </form>
            </main>
            <script src="https://code.jquery.com/jquery-3.2.1.js"></script>
            <script src="https://unpkg.com/mustache@latest"></script>
            <script src="/js/app.js"></script>
            <%- include('partials/footer') %>
    </body>

</html>